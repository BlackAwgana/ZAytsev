<Page x:Class="KVALZAYTSEV.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KVALZAYTSEV.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel Width="150" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock TextAlignment="Center" Text="Login" />
            <TextBox Margin="5" x:Name="TBLogin"/>
            <TextBlock TextAlignment="Center" Text="Password"/>
            <PasswordBox Margin="5" x:Name="PBPassword"/>
            <Button x:Name="BEnter" Content="Succes" Click="BEnter_Click" Margin="5"/>
        </StackPanel>

    </Grid>
</Page>
